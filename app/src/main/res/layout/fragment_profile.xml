<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    tools:context="il.co.moveyorg.movey.ui.movey.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/fragment_profile_map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/fragment_profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/fragment_profile_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/fragment_profile_username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/fragment_profile_first_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/fragment_profile_last_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/fragment_profile_country_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/fragment_profile_logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"/>

        <Button
            android:id="@+id/fragment_profile_reset_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset password"
            />

        <Button
            android:id="@+id/fragment_profile_edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            />


    </LinearLayout>



</FrameLayout>



