<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.co.moveyorg.movey.ui.auth.editprofile.EditProfileActivity"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_edit_user_details_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_person_black_24dp"/>



    <EditText
        android:id="@+id/activity_edit_user_details_edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Username"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/activity_edit_user_details_edittext_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="First name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/activity_edit_user_details_edittext_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Last name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/activity_edit_user_details_edittext_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Country"
        android:inputType="text" />

    <Button
        android:id="@+id/activity_edit_user_details_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/PrimaryFlatButton"
        android:text="Done" />




</LinearLayout>
